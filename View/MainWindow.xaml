<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:vm="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="SDVX Touchscreen"
        Height="450"
        Width="800"
        PreviewMouseDown="OnMouseDown"
        PreviewKeyDown="OnKeyDown"
        Topmost="True"
        Background="Black"
        >
    <Window.Resources>
        <Style TargetType="FrameworkElement" x:Key="Fade">
            <Setter Property="Visibility" Value="Hidden"/>
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.0" To="1.0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Storyboard x:Key="VideoLoopStoryboard">
            <MediaTimeline Storyboard.TargetName="LoopElement"
                     Storyboard.TargetProperty="Source"
                     Source="Resources/IdleAnimmation.mp4"
                     RepeatBehavior="Forever" />
        </Storyboard>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <MediaElement Style="{StaticResource Fade}" Name="myMediaElement" Stretch="UniformToFill" MediaEnded="mediaElement_OnMediaEnded" Visibility="{Binding IsInIdle,
                      Converter={StaticResource BoolToVis}}">
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="MediaElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <MediaTimeline Source="Resources/IdleAnimation.mp4" Storyboard.TargetName="myMediaElement"  
                 RepeatBehavior="Forever" />

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>
            <Image 
                Style="{StaticResource Fade}" Name="Buffer" Source="{Binding FrameBuffer}" Visibility="{Binding IsNotInIdle,
                          Converter={StaticResource BoolToVis}}">
            </Image>
    </Grid>
</Window>
